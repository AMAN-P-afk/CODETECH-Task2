#include <iostream>
#include <vector>
using namespace std;

struct Question {
    string questionText;
    vector<string> options;
    char correctAnswer;
};

void displayQuestion(const Question &q) {
    cout << q.questionText << endl;
    for (int i = 0; i < q.options.size(); ++i) {
        cout << char('A' + i) << ". " << q.options[i] << endl;
    }
    cout << "Your answer: ";
}

bool checkAnswer(char answer, char correctAnswer) {
    return toupper(answer) == correctAnswer;
}

int main() {
    vector<Question> quiz = {
        {"What is the capital of France?", {"Berlin", "Madrid", "Paris", "Rome"}, 'C'},
        {"Which language is used for web development?", {"Python", "HTML", "C++", "Java"}, 'B'},
        {"What is the largest planet in our solar system?", {"Earth", "Mars", "Jupiter", "Venus"}, 'C'},
        {"Which element has the chemical symbol 'O'?", {"Oxygen", "Gold", "Silver", "Iron"}, 'A'},
        {"Who wrote 'Romeo and Juliet'?", {"Charles Dickens", "William Shakespeare", "J.K. Rowling", "Mark Twain"}, 'B'},
        {"What is the smallest prime number?", {"1", "2", "3", "5"}, 'B'},
        {"What is the speed of light?", {"300,000 km/s", "150,000 km/s", "450,000 km/s", "500,000 km/s"}, 'A'},
        {"Which planet is known as the Red Planet?", {"Earth", "Mars", "Jupiter", "Saturn"}, 'B'},
        {"Who painted the Mona Lisa?", {"Van Gogh", "Pablo Picasso", "Leonardo da Vinci", "Michelangelo"}, 'C'},
        {"What is the main component of the sun?", {"Nitrogen", "Oxygen", "Hydrogen", "Helium"}, 'C'},
        {"Which country is famous for the Great Wall?", {"Japan", "India", "China", "Egypt"}, 'C'},
        {"What is the hardest natural substance on Earth?", {"Gold", "Iron", "Diamond", "Platinum"}, 'C'},
        {"Which ocean is the largest?", {"Indian", "Pacific", "Atlantic", "Southern"}, 'B'},
        {"What is the square root of 144?", {"10", "11", "12", "13"}, 'C'},
        {"Who discovered penicillin?", {"Marie Curie", "Albert Einstein", "Isaac Newton", "Alexander Fleming"}, 'D'},
        {"How many continents are there?", {"5", "6", "7", "8"}, 'C'},
        {"Which is the longest river in the world?", {"Amazon", "Nile", "Yangtze", "Mississippi"}, 'B'},
        {"Who is the author of 'Harry Potter'?", {"J.R.R. Tolkien", "J.K. Rowling", "George R.R. Martin", "Stephen King"}, 'B'},
        {"Which gas do plants absorb from the atmosphere?", {"Oxygen", "Carbon Dioxide", "Hydrogen", "Nitrogen"}, 'B'},
        {"How many bones are in the human body?", {"200", "206", "208", "212"}, 'B'}
    };

    int score = 0;
    char userAnswer;

    cout << "Welcome to the Quiz Game!" << endl;
    for (int i = 0; i < quiz.size(); ++i) {
        displayQuestion(quiz[i]);
        cin >> userAnswer;
        if (checkAnswer(userAnswer, quiz[i].correctAnswer)) {
            cout << "Correct!" << endl;
            score++;
        } else {
            cout << "Wrong! The correct answer was " << quiz[i].correctAnswer << "." << endl;
        }
        cout << endl;
    }

    cout << "Quiz Over!" << endl;
    cout << "Your final score is: " << score << " out of " << quiz.size() << endl;

    return 0;
}
